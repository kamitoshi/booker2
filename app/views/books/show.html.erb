<div class="container">
  <%= render "layouts/message", {text: @book} %>
  <div class="row">
    <div class="col-xs-3">
      <%= render "layouts/info", {user: @user, book: Book.new} %>
    </div>
    <div class="col-xs-9">
      <h2 class="sub-title">Book detail</h2>
        <table class="table table-striped">
          <tbody>
            <% if @book.user_id != current_user.id %>
              <tr>
                <td class="user-profile-image">
                  <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %><br>
                    <p><%= @user.name %></p>
                  <% end %>
                </td>
                <td class="content-title"><%=@book.title %></td>
                <td class="content-opinion"><%= @book.body %></td>
              </tr>
            <% else %>
              <tr>
                <td class="user-profile-image" style="width:10%">
                  <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %><br>
                    <p><%= @user.name %></p>
                  <% end %>
                </td>
                <td class="content-title" style="width:20%"><%=@book.title %></td>
                <td class="content-opinion" style="width:40%"><%= @book.body %></td>
                <td class="buttons" style="width:30%">
                  <div class="btn btn-success edit">
                    <%= link_to "Edit", edit_book_path(@book) %>
                  </div>
                  <div class="btn btn-danger delete">
                    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
    </div>
  </div>
</div>
