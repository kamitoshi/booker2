<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/info", {user: @user, book: Book.new} %>
    </div>
    <div class="col-md-9">
      <h2 class="sub-title">Book detail</h2>
        <table class="table table-striped">
          <tbody>
            <% if @book.user_id != current_user.id %>
              <tr>
                <td class="user-profile-image"><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %></td>
                <td class="content-title"><%=@book.title %></td>
                <td class="content-opinion"><%= @book.opinion %></td>
              </tr>
            <% else %>
              <tr>
                <td class="user-profile-image" style="width:10%"><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %></td>
                <td class="content-title" style="width:20%"><%=@book.title %></td>
                <td class="content-opinion" style="width:40%"><%= @book.opinion %></td>
                <td class="buttons" style="width:30%">
                  <div class="btn btn-success edit">
                    <%= link_to "Edit", edit_book_path(@book) %>
                  </div>
                  <div class="btn btn-danger delete">
                    <%= link_to "Delete", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
    </div>
  </div>
</div>
