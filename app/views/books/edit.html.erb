<div class="container">
  <%= render "layouts/message", {text: @book} %>
  <h1>Editing Book</h1>
  <div class="row">
    <div class="col-xs-12 form-box">
      <%= form_for (@book) do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :opinion %><br>
          <%= f.text_area :body %>
        </div>

        <div class="button">
          <%= f.submit "Update Book", class:"btn btn-primary" %>
        </div>

      <% end %>
      <div class="menu">
        <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
      </div>
    </div>
  </div>
</div>
