<div class="container">
  <h1>Editting Book</h1>
  <div class="row">
    <div class="col-xs-12 form-box">
      <%= form_for (@book) do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :opinion %><br>
          <%= f.text_area :opinion %>
        </div>

        <div class="button">
          <%= f.submit "Update Book", class:"btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
