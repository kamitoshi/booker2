<div class="container">
  <%= render "layouts/message", {text: @book} %>
  <div class="row">
    <div class="col-xs-3">
      <%= render "layouts/info", {user: @user, book: @book} %>
    </div>
    <div class="col-xs-9">
      <h2 class="sub-title">Books</h2>
      <% if @books.blank? %>
        <p class="none">投稿がまだありません</p>
      <% else %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th class="content-title">Title</th>
              <th class="content-opinion">Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="user-profile-image">
                <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %>
                <% end %>
              </td>
              <td class="content-title"><%= link_to  book.title, book_path(book) %></td>
              <td class="content-opinion"><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
