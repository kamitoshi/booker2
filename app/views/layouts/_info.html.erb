<div class="infomation-box">
  <h2 class="sub-title">User info</h2>
  <div class="profile-image">
    <%= attachment_image_tag user, :profile_image, :fill, 150,150, fallback: "no_image.jpg", size:"150x150" %>
  </div>
  <table class="table">
    <tbody><tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
</div>
<div class="row">
  <%= link_to edit_user_path(current_user) do %>
    <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user"></span>
  <% end %>
</div>
<div class="form-box">
  <h3 class="sub-title">New Book</h3>
  <%= form_for (book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :opinion %>

    <div class="button">
      <%= f.submit "Create Book", class:"btn btn-primary" %>
    </div>

  <% end %>
</div>
