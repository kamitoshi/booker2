<div class="container">
  <%= render "layouts/message", {text: @user} %>
  <div class="row">
    <div class="col-xs-3">
      <%= render "layouts/info", {user: @user, book: @book} %>
    </div>
    <div class="col-xs-9">
      <h2 class="sub-title">Books</h2>
      <% if @books.blank? %>
        <p class="none">投稿がまだありません</p>
      <% else %>
        <table class="table table-striped" style="table-layout:fixed">
          <thead>
            <tr>
              <th colspan="1" width="10%"></th>
              <th class="content-title" width="30%">Title</th>
              <th class="content-opinion" width="60%">Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="user-profile-image" width="10%"><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %></td>
              <td class="content-title" width="30%"><%= link_to  book.title, book_path(book) %></td>
              <td class="content-opinion" width="60%"><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
