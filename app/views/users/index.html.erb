<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render "layouts/info", {user: @user, book: @book} %>
    </div>
    <div class="col-xs-9">
      <h2 class="sub-title">Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="user-profile-image">image</th>
            <th class="user-name">name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="user-profile-image"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:"50x50" %></td>
            <td class="user-name"><%= user.name %></td>
            <td class="show"><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
